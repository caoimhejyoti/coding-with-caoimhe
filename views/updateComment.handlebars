{{!-- Current Comment --}}
<section class="container my-5 ">
  <section id ="header-card" class="col-12 card post-card">
    <section class="tagline-stripe bg-gradient">
      <h2>Current Comment:</h2>
      </section>
    <div class="comment">
      <p class="two-columns">{{commentInfo.comment}}</p>
    </div>
  </section>
</section>

{{!-- Update Comment --}}
<div class="container my-5">
  <div id="create-card" class="col-9 card dashboard-card mx-auto">
    <div class="create-stripe bg-gradient">
      <h3>Update comment:</h3>
    </div>
    <form class="form new-blogPost-form">
      <div class="form-group">
        <label for="update-comment">Comment:</label>
        <textarea class="form-control" type="text" id="update-comment" name="update-comment" placeholder={{commentInfo.comment}}></textarea>
      </div>
      <div class="form-group">
        <button type="submit" id= "submit-updated-comment" class="btn btn-primary" data-id={{BlogPostInfo.id}}>Update</button>
      </div>
    </form>
  </div>
</div>


{{!-- Script --}}
<script src="/js/comment.js"></script>