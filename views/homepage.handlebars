<!-- Loop over each object in the blogs array -->
{{#each BlogPosts as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/blogposts/{{blog.id}}">{{blog.title}}</a>
    </h2>
    {{!-- <p>Created by {{blog.user_id}} on {{format_date blog.date_created}}</p> --}}
  </div>
  <div class="col-md-7">
    <p>
      {{blog.blog_text}}
    </p>
  </div>
</div>
{{/each}}


