<div id="blog-post" class="col-md-12 ">
  <h2>{{title}}</h2>
  {{!-- <p>{{{get_emoji}}}</p> --}}
  <p>{{blog_text}}</p>
  <p>Created by {{user.name}} on {{format_date date}}</p>
</div>
  {{#if blogPosts.length}}
    {{#each blogPosts as |blog|}}
    <div id="currentComments" class="row mb-2">
      <div class="col-md-8">
        <h4>{{comment.comment}}</a></h4>
      </div>
      <div class="col-md-4">
        <p>{{user.name}}</p>>
      </div>
    </div>
    {{else}}
      <p>No comments made.</p>
    {{/each}}
  {{/if}}
  </div>
<div id="createComment" class="col-md-6 ">
    <h3>Have something to say?</h3>
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-content">Comment:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" id= "submit" class="btn btn-primary">Comment</button>
      </div>
    </form>
</div>
