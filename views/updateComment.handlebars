{{!-- Blog Post --}}
<section class="container my-5 ">
  <section id ="header-card" class="col-12 card post-card">
    <section class="header-stripe bg-gradient">
    </section>
    <div class="comment">
      <p class="">{{comment.comment}}</p>
    </div>
  </section>
</section>

{{!-- Update Post --}}
<div class="container my-5">
  <div id="create-card" class="col-9 card dashboard-card mx-auto">
    <div class="create-stripe">
      <h3>Update comment:</h3>
    </div>
    <form class="form new-blogPost-form">
      <div class="form-group">
        <label for="update-comment">Comment:</label>
        <textarea class="form-input" id="update-comment" name="update-comment">Add New comment here</textarea>
      </div>
      <div class="form-group">
        <button type="submit" id= "submit" class="btn btn-primary" data-id={{BlogPostInfo.id}}>Update</button>
      </div>
    </form>
  </div>
</div>


{{!-- Script --}}
<script src="/js/comment.js"></script>